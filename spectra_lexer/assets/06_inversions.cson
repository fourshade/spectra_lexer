  ".addy": ["AED",  "(a)(.dd)(~y)", "INV", "uses E as folded -y"],
  "-ally": ["AEL",  "(a)(.ll)(~y)", "INV", "uses E as folded -y"],
  "-ary":  ["AER",  "(a)(.r)(~y)",  "INV", "uses E as folded -y"],
  ".ary":  ["AEUR", "(a)(.r)(y)",   "INV", "uses EU as folded -y"],
  ".arry": ["AER",  "(a)(.rr)(~y)", "INV", "uses E as folded -y"],
